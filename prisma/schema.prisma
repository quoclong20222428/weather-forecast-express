datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model City {
  id           Int      @id @default(autoincrement())
  // ID của thành phố theo OpenWeatherMap
  owmId        Int      @unique
  name         String
  lat          Float
  lon          Float
}